<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_rounded_transparent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12ssp"
            android:paddingTop="@dimen/_4ssp"
            android:layout_gravity="center"
            android:paddingRight="@dimen/_12ssp"
            android:paddingBottom="@dimen/_12ssp">

            <RadioGroup

                android:id="@+id/rgAccountTypeSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8ssp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbAccountTypeSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Candidate"
                    android:textColor="@color/ofWhite" />

                <RadioButton
                    android:id="@+id/rbCandidateTypeSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Company"
                    android:textColor="@color/ofWhite" />

            </RadioGroup>

            <EditText
                android:id="@+id/etFirstNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4ssp"
                android:layout_marginTop="@dimen/_12ssp"
                android:layout_marginRight="@dimen/_4ssp"
                android:hint="First Name"
                android:inputType="text"
                android:textColor="@color/ofWhite" />

            <EditText
                android:id="@+id/etLastNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4ssp"
                android:layout_marginTop="@dimen/_12ssp"
                android:layout_marginRight="@dimen/_4ssp"
                android:hint="Last Name"
                android:inputType="text"
                android:textColor="@color/ofWhite" />

            <EditText
                android:id="@+id/etUserNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4ssp"
                android:layout_marginTop="@dimen/_4ssp"
                android:layout_marginRight="@dimen/_4ssp"
                android:drawableLeft="@drawable/ic_account_box_black_24dp"
                android:hint="User Name"
                android:inputType="text"
                android:textColor="@color/ofWhite" />


            <EditText
                android:id="@+id/etPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4ssp"
                android:layout_marginTop="@dimen/_4ssp"
                android:layout_marginRight="@dimen/_4ssp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/ofWhite" />

            <EditText
                android:id="@+id/etConfirmPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4ssp"
                android:layout_marginTop="@dimen/_4ssp"
                android:layout_marginRight="@dimen/_4ssp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/ofWhite" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_12ssp"
                android:layout_marginRight="@dimen/_12ssp"
                android:background="@drawable/ic_rounded_button_yellow"
                android:text="Sign Up "
                android:textColor="@color/ofWhite"
                android:textSize="@dimen/_18ssp"
                android:textStyle="normal" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>